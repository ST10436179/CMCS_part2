@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims";
}

<h1 class="mb-4"><i class="fas fa-clock me-2"></i>Pending Claims</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>There are no pending claims at the moment.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Submission Date</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total Amount</th>
                    <th>Documents</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.Lecturer.FirstName @claim.Lecturer.LastName</td>
                        <td>@claim.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.HourlyRate.ToString("N2")</td>
                        <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                        <td>
                            @if (claim.Documents.Any())
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-paperclip me-1"></i>@claim.Documents.Count
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">None</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="ApproveClaim" asp-route-id="@claim.Id"
                                   class="btn btn-sm btn-success" title="Approve">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a asp-action="RejectClaim" asp-route-id="@claim.Id"
                                   class="btn btn-sm btn-danger" title="Reject">
                                    <i class="fas fa-times"></i>
                                </a>
                                <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.Id"
                                   class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation dialog for reject buttons
            $('.btn-danger').click(function(e) {
                if (!confirm('Are you sure you want to reject this claim? You will need to provide a reason.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}